{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "lib": ["ES2020"],
    "outDir": "./dist/main",
    "rootDir": "./src",
    "noEmit": false,
    "declaration": false,
    "sourceMap": true,
    "jsx": "preserve"
  },
  "include": ["src/main/**/*", "src/shared/**/*"],
  "exclude": ["src/renderer/**/*", "node_modules", "dist"]
}
