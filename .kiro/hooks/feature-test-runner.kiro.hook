{
  "enabled": true,
  "name": "Feature Test Runner",
  "description": "Automatically runs tests for features when source code files are modified, focusing on the specific areas that were changed rather than full regression testing",
  "version": "1",
  "when": {
    "type": "fileEdited",
    "patterns": [
      "src/**/*.ts",
      "src/**/*.tsx",
      "src/**/*.js",
      "src/**/*.jsx"
    ]
  },
  "then": {
    "type": "askAgent",
    "prompt": "Files have been modified in the source code. Please identify what features were worked on based on the changed files and run the appropriate tests for those specific features. Focus on unit tests and integration tests related to the modified functionality. Use npm test or jest commands to run targeted tests rather than the full test suite."
  }
}